{
	"version": 0.1,
	"checks": {
		"employee.daily-whrs-capacity.limit": {
			"type": "limit.exceed",
			"violation": {
				"severity": "warning",
				"message": "employee capality (whrs per day) exceed"
			},
			"obj_to_validate": {
				"field_to_validate": "whrs",
				"match": ["employee", "date", "key"],
				"collection": "sprint.assignments"
			},
			"target": {
				"type": "aggregate",
				"cfg": {
					"agg.func": "sum",
					"agg.field": "whrs",
					"agg.collection": "sprint.assignments",
					"agg.group": ["employee", "date"]
				}
			},
			"constraint": {
				"type": "constant",
				"value": 6
			}
		}
	}
}